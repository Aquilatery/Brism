# Application settings
app:
  name: MyWebApp
  version: 1.0.0
  description: A sample web application

# Database configuration
database:
  host: localhost
  port: 5432
  name: myapp_db
  user: ${DB_USER}
  password: ${DB_PASSWORD}

# Logging configuration
logging:
  level: INFO
  handlers:
    - type: console
      format: ""%(asctime)s - %(name)s - %(levelname)s - %(message)s""
    - type: file
      filename: app.log
      maxBytes: 1048576
      backupCount: 3

# Feature flags
features:
  darkMode: true
  betaFeatures:
    - newUI
    - analytics
    - recommendations")
    Language="CodeLanguage.Yaml"
    EnableLineNumbers="true" />
</div>
